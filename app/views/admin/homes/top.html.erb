<p id="notice"></p>
<div class="container">
    <h3>注文履歴一覧</h3>
 <div class="row">
      <table class="col-10 table table-bordered">
        <tbody>
          <tr class="table-secondary">
        　　<td>購入日時</td>
        　　<td>購入者</td>
        　　<td>注文個数</td>
          </tr>
        </tbody>
        <% @orders.each do |order| %>
        <% sum=0 %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
            <td><%= order.name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <% sum += order_detail.amount %>
              <% end %>
              <%= sum %>
            </td>
          </tr>
        <% end %>
        </table>
  </div>
</div>