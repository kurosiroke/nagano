<p id="notice"></p>
  <div class="container">
     <h2>管理者ログイン</h2>
  </div>
  <div class="col-md-8 px-5 px-sm-0 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <div class="field">
          <%= f.label :メールアドレス %>
          &emsp;&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :パスワード %>
          &emsp;&emsp;&emsp;&emsp;<%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div><br>
  </div>
  <div class="col-7">
      <div class="text-center">
         <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
    <%= render "admin/shared/links" %>
  