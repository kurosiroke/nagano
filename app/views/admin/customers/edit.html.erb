<p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
   <h2><%= @customer.full_name %>さんの会員情報編集</h2>
   </div>
    <div class="col-md-8 col-md-offset-2">
    <%= form_with model: @customer, url: admin_customer_path do |f| %> 
     <div class="form-group">
       <label for="customer_id"></label>
       <table>
         <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
          <th></th>
        </tr>
         <tr>
          <th>氏名</th> 
          <th><%= f.text_field :last_name %></th>
          <th><%= f.text_field :first_name %></th>
         </tr>
         <tr>
          <th>フリガナ</th>
        　<th> <%= f.text_field :last_name_kana %></th>
        　<th> <%= f.text_field :first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
          <th></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
          <th></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :telephone_number %></th>
          <th></th>
        </tr>
        <tr>
          <th style="padding-right: 3em">メールアドレス</th>
          <th><%= f.email_field :email %></th>
          <th></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= @customer.is_deleted %></th>
          <th></th>
        </tr>
       </table>
       </div>
     <% end %>
     <div class="text-center">
        <%= link_to "変更を保存", admin_customer_path, class: 'btn btn-sm btn-success' %>
     </div>
  　</div>
  </div>
  
          