<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <h2>商品一覧</h2>
  <div class="text-right">
  <button type="button" class="btn btn-secondary rounded-circle p-0" style="width:2rem;height:2rem;" onclick="location.href='/admin/items/new'">+</button>
   </div>
    <table class="table table-hover table-inveres">
        <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.id %>
          </td>
          <td>
            <%= link_to item.name,admin_item_path(item.id) %>
          </td>
          <td>
            <%= item.number_to_currency %>
          </td>
        </tr> 
      <% end %>
        </tbody>
    </table>
</div>