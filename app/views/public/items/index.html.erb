<p id="notice"></p>
<div class="container px-5 px-sm-0">
   <h3>商品一覧(全x件）</h3>
   <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3">
      <%= link_to image_tag(item.get_image(100,100)),item_path(item.id)%><br>
      <%= link_to item.name,item_path(item.id) %><br>
      ￥<%= (item.price * 1.1).floor %><br>
    </div>
    <% end %>
</div>