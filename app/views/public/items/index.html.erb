<h2>新着商品</h2>
<table class="table table-hover table-inveres">
        <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th>￥</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to image_tag item.get_image(100,100) %>
          </td>
          <td>
            <%= link_to item.name,admin_item_path(item.id) %>
          </td>
          <td>
            <%= (@item.price * 1.1).floor %>
          </td>
        </tr> 
      <% end %>
        </tbody>
    </table>