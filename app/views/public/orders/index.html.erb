<p id="notice"></p>
<div class="container">
  <div class="row">
  <h3>注文情報一覧</h3>
  </div>
    <table class="table col-10 table-bordered">
     <tbody>
      <tr class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
        <% total = 0 %>  
        
    <% @orders.each do |order| %>
       <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
            〒<%= order.postal_code %> <br>
            <%= order.address %><br>
            <%= order.name %>
        </td>
        <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
        </td>
        <td><%= order.total_cash.to_s(:delimited)  %></td>
        <td><%= link_to "表示する", order_path(order.id),class: "btn btn-primary" %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
</div>