<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="row my-4">
        <div class="col-6">
        <h3>会員情報編集</h3>
        </div>
        <div class="col-md-10 col-md-offset-2">
        <%= form_with model: @customer, url: costomers_update_path do |f| %> 
        <div class="form-group">
        <label for="customer_id"></label>
        <table class="col-12">
         <tbody>
          <tr>          
              <th>会員ID</th>
              <th><%= @customer.id %></th>
              <th></th>
          </tr>
          <tr>
              <th>氏名</th> 
              <th><%= f.text_field :last_name %></th>
              <th><%= f.text_field :first_name %></th>
          </tr>
          <tr>
              <th>フリガナ</th>
              <th> <%= f.text_field :last_name_kana %></th>
              <th> <%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
              <th>郵便番号</th>
              <th><%= f.text_field :postal_code %></th>
              <th></th>
          </tr>
          <tr>
              <th>住所</th>
              <th><%= f.text_field :address %></th>
              <th></th>
          </tr>
          <tr>
              <th>電話番号</th>
              <th><%= f.text_field :telephone_number %></th>
              <th></th>
          </tr>
          <tr>
              <th style="padding-right: 3em">メールアドレス</th>
              <th><%= f.email_field :email %></th>
              <th></th>
          </tr>
          <tr>
              <th>会員ステータス</th>
              <th><%= @customer.is_deleted %></th>
              <th></th>
          </tr>
          </tbody>
         </table>
      </div>
        
        <div class="text_field">
        <table class="col-12">
          <tr>
            <th style="padding-right: 5em"></th>
            <th><%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %></th>
            <th><%= link_to "退会する", withdrawal_path, method: :patch, class: 'btn btn-sm btn-primary' %></th>
          </tr>
        </table>
        <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>